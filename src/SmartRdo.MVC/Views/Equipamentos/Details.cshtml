@model SmartRdo.Business.Models.Equipamento

@{
    ViewData["Title"] = "Details";
}

<h4 class="text-center">Detalhes do Equipamento</h4>

<hr />
<div class="container">
    <div class="row">
        <div class="col-12">
            <label asp-for="Nome" class="h5"></label>
            <input asp-for="Nome" class="form-control" disabled />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h5 class="mt-3">Checklist</h5>
            <ul class="list-group col-12 mb-2" style="padding:0">
                @foreach (var item in Model.ItensChecklist)
                {
                    <li class="list-group-item col-12">@item.Descricao</li>
                }
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-block btn-success">Editar</a>
            <a asp-action="Index" class="btn btn-block btn-outline-primary">Retornar</a>
        </div>
    </div>