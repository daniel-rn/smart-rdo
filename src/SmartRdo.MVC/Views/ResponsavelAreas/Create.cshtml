@model SmartRdo.Business.Models.ResponsavelArea

@{
    ViewData["Title"] = "Cadastro de Responsáveis";
}

<h1>Cadastro de Responsáveis</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-block btn-success" />
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-block btn-outline-primary">Retornar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
