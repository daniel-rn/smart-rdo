@model IEnumerable<SmartRdo.Business.Models.Atividade>
@using SmartRdo.Business.Extensions;

@{
    ViewData["Title"] = "Atividades";
}

<h1>Atividades</h1>

<p>
    <a asp-action="Create">Cadastrar</a>
</p>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InicioPrevisto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FimPrevisto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResponsavelArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Operador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InicioPrevisto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FimPrevisto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Area.CodigoArea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResponsavelArea.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Operador.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td class="text-right">
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></spam></a>
                    <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam></a>
                    <a class="btn btn-info btn-sm" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam></a>
                </td>
            </tr>
        }
    </tbody>
</table>
